<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>main</id>
  <baseDirectory>assembly</baseDirectory>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>dir</format>
  </formats>
  <moduleSets>

    <!-- core module -->
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>com.essaid.owlcl:core</include>
      </includes>
      <binaries>
        <outputDirectory>/</outputDirectory>
        <unpack>false</unpack>
        <includes>
          <include>com.essaid.owlcl:core</include>
        </includes>
        <outputFileNameMapping>owlcl.${module.extension}</outputFileNameMapping>
        <!-- <dependencySets> -->
        <!-- <dependencySet> -->
        <!-- <includes></includes> -->
        <!-- <outputDirectory>owlcl-extensions/core</outputDirectory> -->
        <!-- <scope>runtime</scope> -->
        <!-- </dependencySet> -->
        <!-- </dependencySets> -->
      </binaries>
    </moduleSet>



    <!-- command module -->
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includeSubModules>false</includeSubModules>
      <includes>
        <include>com.essaid.owlcl:command</include>
      </includes>
      <binaries>
        <outputDirectory>/owlcl/command</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>

    <!-- core.fact162 -->
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>com.essaid.owlcl:fact162.native</include>
      </includes>
      <binaries>
        <outputDirectory>owlcl/fact162</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>

    <!-- core.module -->
    <!-- <moduleSet> -->
