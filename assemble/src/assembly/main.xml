<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>main</id>
  <baseDirectory>assembly</baseDirectory>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>dir</format>
  </formats>
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includeSubModules>false</includeSubModules>
      <includes>
        <include>com.essaid.owlcl:core</include>
      </includes>
      <binaries>
        <outputDirectory>.</outputDirectory>
        <unpack>false</unpack>
        <outputFileNameMapping>owlcl.${module.extension}</outputFileNameMapping>
        <dependencySets>
          <dependencySet>
            <includes></includes>
            <outputDirectory>owlcl-extensions/core</outputDirectory>
            <scope>runtime</scope>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includeSubModules>false</includeSubModules>
      <includes>
        <include>com.essaid.owlcl:fact.plus.plus.native</include>
      </includes>
      <binaries>
        <outputDirectory>owlcl-extensions/fact-plus-plus</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>

    <!-- core.command -->
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includeSubModules>false</includeSubModules>
      <includes>
        <include>com.essaid.owlcl:command</include>
      </includes>
      <binaries>
        <outputDirectory>owlcl-extensions/core</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>

  <fileSets>
    <fileSet>
      <directory>../fact.plus.plus/package.dependencies</directory>
      <outputDirectory>owlcl-extensions/fact-plus-plus</outputDirectory>
      <includes></includes>
    </fileSet>
    <fileSet>
      <directory>../core/package.dependencies</directory>
      <outputDirectory>owlcl-extensions/core</outputDirectory>
      <includes></includes>
    </fileSet>

  </fileSets>
</assembly>