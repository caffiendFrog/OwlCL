    <!-- <includeSubModules>false</includeSubModules> -->
    <!-- <includes> -->
    <!-- <include>com.essaid.owlcl:module</include> -->
    <!-- </includes> -->
    <!-- <binaries> -->
    <!-- <outputDirectory>owlcl-extensions/core.module</outputDirectory> -->
    <!-- <unpack>false</unpack> -->
    <!-- </binaries> -->
    <!-- </moduleSet> -->
  </moduleSets>

  <fileSets>
    <fileSet>
      <directory>../fact162.native/assemble.dependencies</directory>
      <outputDirectory>owlcl/fact162</outputDirectory>
      <includes></includes>
    </fileSet>
    <fileSet>
      <directory>../command/assemble.dependencies</directory>
      <outputDirectory>/owlcl/command</outputDirectory>
      <includes></includes>
    </fileSet>
    <fileSet>
      <directory>../core/assemble.dependencies</directory>
      <outputDirectory>/owlcl/core</outputDirectory>
      <includes></includes>
    </fileSet>
  </fileSets>
</assembly>